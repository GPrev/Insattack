<UserControl x:Class="INSAttackTheGame.UnitInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border x:Name ="m_border"  BorderBrush="Black" BorderThickness="2">
        <Grid Name="m_grid">       
            <StackPanel Name="m_stackPanel" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
                <Label x:Name ="m_nameLabel" Content="Label" HorizontalAlignment="Left"  VerticalAlignment="Top" FontWeight="Bold"/>
                <Label x:Name ="m_points" Content="" Visibility="Hidden" IsEnabled="False" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="0" Height="0"/>
                <Label x:Name ="m_Life" Content="Label" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <Label x:Name ="m_Movement" Content="Label" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <Label x:Name ="m_Attack" Content="Label" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <Label x:Name ="m_Defense" Content="Label" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>