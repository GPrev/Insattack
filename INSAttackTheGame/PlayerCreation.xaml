<UserControl x:Class="INSAttackTheGame.PlayerCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" DockPanel.Dock="Left">
            <TextBlock x:Name ="m_main" Text="Joueur" HorizontalAlignment="Left"  VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBlock x:Name ="m_playerName" Text="Joueur" HorizontalAlignment="Left"  VerticalAlignment="Top" FontWeight="Bold" Visibility="Visible" Margin="10,0,0,0" IsManipulationEnabled="True"/>
            <ComboBox x:Name="m_departChoice" Margin="10,0,0,0">
                <ComboBoxItem IsSelected="True">INFO</ComboBoxItem>
                <ComboBoxItem>EII</ComboBoxItem>
                <ComboBoxItem>SRC</ComboBoxItem>
                <ComboBoxItem>SGM</ComboBoxItem>
                <ComboBoxItem>GMA</ComboBoxItem>
                <ComboBoxItem>GC</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
